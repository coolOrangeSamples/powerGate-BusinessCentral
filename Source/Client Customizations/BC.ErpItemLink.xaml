<wpf:ThemedWPFWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Autodesk.DataManagement.Client.Framework.Forms.Controls.WPF;assembly=Autodesk.DataManagement.Client.Framework.Forms"
		Width="800" Height="600" MinWidth="550" MinHeight="400" Title="powerGate - Link ERP Item" WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/powerGate.UI;component/Resources/powerGate_256px.ico">
    <wpf:ThemedWPFWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Autodesk.DataManagement.Client.Framework.Forms;component/Controls/WPF/ControlTemplates/MergedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource ThemedTextBoxStyle}">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="1" />
            </Style>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ThemedButtonStyle}">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Height" Value="29" />
            </Style>
            <Style x:Key="HeaderRightAlign" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="HorizontalContentAlignment" Value="Right" />
            </Style>
            <Style x:Key="CellRightAlign" TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="0,0,4,0" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
        </ResourceDictionary>
    </wpf:ThemedWPFWindow.Resources>

    <Grid Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Border BorderThickness="0 0 0 1">
                <Border.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </Border.BorderBrush>
            </Border>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image x:Name="StatusIcon" Grid.Column="0" Width="20" HorizontalAlignment="Right" Source="pack://application:,,,/powerGate.UI;component/Resources/status_unknown.png"/>
                <Label x:Name="Title" Content="Search and link ERP Item" Grid.Column="1" Margin="10,0,10,0" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" />
            </Grid>
        </Grid>

        <Grid x:Name="SearchArea" Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="SearchCriteria" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <Label Content="Search" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="SearchTerm" Grid.Column="1" Height="29" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0"/>
                <Button x:Name="ButtonSearch" Content="Search" Grid.Column="2" IsEnabled="{Binding ElementName=SearchTerm, Path=Text.Length}"/>
            </Grid>
            <DataGrid x:Name="SearchResults" Grid.Row="1" AutoGenerateColumns="False" Margin="0,10,0,0" SelectionMode="Single" SelectionUnit="FullRow" Tag="Search ERP Item" RowHeaderWidth="0" ColumnHeaderHeight="24">
                <DataGrid.Style>
                    <Style TargetType="DataGrid" BasedOn="{StaticResource ThemedDataGridStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Items.Count, RelativeSource={RelativeSource Self}}" Value="0">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGrid">
                                            <TextBlock Text="{Binding Tag, ElementName=SearchResults}" HorizontalAlignment="Center"></TextBlock>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ThemedDataGridCellStyle}">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource ThemedDataGridRowStyle}">
                        <Setter Property="Height" Value="25" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="120" ElementStyle="{StaticResource CellRightAlign}" HeaderStyle="{StaticResource HeaderRightAlign}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" IsReadOnly="True" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" IsReadOnly="True" />
                    <DataGridTextColumn Header="Material" Width="80" Binding="{Binding Material}"  />
                    <DataGridTextColumn Header="UoM" Width="60" Binding="{Binding UnitOfMeasure}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <Border BorderThickness="0 1 0 0">
                <Border.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </Border.BorderBrush>
            </Border>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="ButtonLink" Content="Link" Grid.Column="1" Margin="0,0,10,0" IsEnabled="{Binding ElementName=SearchResults, Path=SelectedItems.Count}"/>
                <Button x:Name="ButtonCancel" Grid.Column="2" IsCancel="True">Cancel</Button>
            </Grid>
        </Grid>
    </Grid>
</wpf:ThemedWPFWindow>